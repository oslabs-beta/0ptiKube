FROM node:18-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Set development environment first
ENV NODE_ENV=development

# Install dependencies with layer caching
RUN --mount=type=cache,target=/root/.npm \
    npm ci && \
    npm install

# Copy only necessary files
COPY . .

# Expose Next.js port
EXPOSE 3000

# Use development command with turbopack
CMD ["npm", "run", "dev"]